<!--starting of login pallet-->
<div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-4">
		<div class="login-local" >
			<img class="mb-4" src="/static/images/login.jpg" alt="ICON" width="100" height="100">
			<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
			<label for="email" class="sr-only">Email address</label>
				<input type="text" id="email" name="email" class="form-control" placeholder="Email address" required autofocus>
			<label for="password" class="sr-only">Password</label>
				<input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
			<a href="/api/forgot" style="color:blue">forgot password</a>
			<button class="btn btn-lg btn-primary btn-block" id='login' type="submit">Sign in</button>          
		</div>
	
		<form class="" method="GET" action="/auth/google" style="margin-top:20px;" >
			<button class="btn btn-lg btn-primary btn-block" type="submit">Sign in with google</button>
		</form>
			
		<form class="" method="GET" action="/auth/google" style="margin-top:20px;">
				<button class="btn btn-lg btn-primary btn-block" type="submit">Sign in with facebook</button>
		</form>	   
	</div>
	<div class="col-md-4"></div>
</div>
